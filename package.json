{
  "name": "backend",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@google/genai": "^1.11.0",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "drizzle-orm": "^0.44.4",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@types/cors": "^2",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9",
    "@types/node": "^24.0.7",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.10"
  },
  "nodemonConfig": {
    "exec": "ts-node src/server.ts",
    "watch": [
      "src"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "src/**/*.spec.ts",
      "src/migrations/*",
      "dist",
      "*test",
      "node_modules"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": 1000
  }
}
