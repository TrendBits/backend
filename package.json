{
  "name": "backend",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "start": "ts-node src/server.ts",
    "dev": "nodemon",
    "migrate": "ts-node src/utils/migration_runner.ts"
  },
  "dependencies": {
    "@sqlitecloud/drivers": "^1.0.507",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9",
    "@types/node": "^24.0.7",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "nodemonConfig": {
    "exec": "ts-node src/server.ts",
    "watch": [
      "src"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "src/**/*.spec.ts",
      "src/migrations/*",
      "dist",
      "*test",
      "node_modules"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "delay": 1000
  }
}
